---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const projects = (await getCollection('proyectos')).sort(
	(a: { data: { publishDate: number; }; }, b: { data: { publishDate: number; }; }) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Mis Proyectos | Alberto Rojas"
	description="Vea mis proyectos m치s recientes a continuaci칩n para tener una idea de mi experiencia pasada."
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Mis Proyectos"
				tagline="Vea mis proyectos m치s recientes a continuaci칩n para tener una idea de mi experiencia pasada."
				align="start"
			/>
			<Grid variant="offset">
				{
					projects.map((project:any) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
